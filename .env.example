# Crawler Microservice Configuration

# Application Settings
APP_NAME="Crawler Microservice"
APP_VERSION="1.0.0"
DEBUG=False
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8001

# Crawler Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
DEFAULT_MAX_PAGES=50
MAX_ALLOWED_PAGES=500

# HTTP Client Settings
USER_AGENT=CrawlerBot/1.0
MAX_RETRIES=3
RETRY_DELAY=2

# Content Extraction Settings
CONTENT_SNIPPET_LENGTH=200
MAX_CONTENT_LENGTH=10000

# Vector Database Settings (PostgreSQL + pgvector)
DATABASE_URL=postgresql://user:password@localhost:5432/crawler_db
VECTOR_STORAGE_ENABLED=true

# Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
